                                cout<<"|_______________________|______________|"<<endl;
                                cout<<""<<endl;
                                cout<<"Masukan Pilihan Anda : ";
                                cin>>kode;
                                switch (kode)
                                {
                                case 1:
                                cout<<'\n'<<"Ayam Goreng"<<endl;
                                pri=10000;
                                cout<<"Masukan Jumlah Porsi : ";
                                cin>>jml;
                                tot=pri*jml;
                                cout<<"Total Hargany        : Rp. "<<tot<<endl;
                                cout<<"Dibayar              : Rp. ";
                                cin>>byr;
                                kbl=byr-tot;
                                cout<<"Kembali              : Rp."<<kbl<<endl;
                                cout<<""<<endl;
                                cout<<"Masih Ada Yang Lain Y/T : ";
                                cin>>mad;
                                break;
                               
                                case 2:
                                cout<<'\n'<<"Nasi Goreng"<<endl;
                                pri=12000;
                                cout<<"Masukan Jumlah Porsi : ";
                                cin>>jml;
                                tot=pri*jml;
                                cout<<"Total Hargany        : Rp. "<<tot<<endl;
                                cout<<"Dibayar              : Rp. ";
                                cin>>byr;
                                kbl=byr-tot;
                                cout<<"Kembali              : Rp."<<kbl<<endl;
                                cout<<""<<endl;
                                cout<<"Masih Ada Yang Lain Y/T : ";
                                cin>>mad;
                                break;
                               
                                case 3:
                                cout<<'\n'<<"Mie Ayam"<<endl;
                                pri=10000;
                                cout<<"Masukan Jumlah Porsi : ";
                                cin>>jml;
                                tot=pri*jml;
                                cout<<"Total Hargany        : Rp. "<<tot<<endl;
                                cout<<"Dibayar              : Rp. ";
                                cin>>byr;
                                kbl=byr-tot;
                                cout<<"Kembali              : Rp."<<kbl<<endl;
                                cout<<""<<endl;
                                cout<<"Masih Ada Yang Lain Y/T : ";
                                cin>>mad;
                                break;
                               
                                case 4:
                                cout<<'\n'<<"Pecel Ayam+Nasi"<<endl;
                                pri=15000;
                                cout<<"Masukan Jumlah Porsi : ";
                                cin>>jml;
                                tot=pri*jml;
                                cout<<"Total Hargany        : Rp. "<<tot<<endl;
                                cout<<"Dibayar              : Rp. ";
                                cin>>byr;
                                kbl=byr-tot;
                                cout<<"Kembali              : Rp."<<kbl<<endl;
                                cout<<""<<endl;
                                cout<<"Masih Ada Yang Lain Y/T : ";
                                cin>>mad;
                                break;
                               
                                case 5:
                                cout<<'\n'<<"Soto Ayam"<<endl;
                                pri=10000;
                                cout<<"Masukan Jumlah Porsi : ";
                                cin>>jml;
                                tot=pri*jml;
                                cout<<"Total Hargany        : Rp. "<<tot<<endl;
                                cout<<"Dibayar              : Rp. ";
                                cin>>byr;
                                kbl=byr-tot;
                                cout<<"Kembali              : Rp."<<kbl<<endl;
                                cout<<""<<endl;
                                cout<<"Masih Ada Yang Lain Y/T : ";
                                cin>>mad;
                                break;
                               
                                case 6:
                                cout<<'\n'<<"Jus Jeruk"<<endl;
                                pri=5000;
                                cout<<"Masukan Jumlah Porsi : ";
                                cin>>jml;
                                tot=pri*jml;
                                cout<<"Total Hargany        : Rp. "<<tot<<endl;
                                cout<<"Dibayar              : Rp. ";
                                cin>>byr;
                                kbl=byr-tot;
                                cout<<"Kembali              : Rp."<<kbl<<endl;
                                cout<<""<<endl;
